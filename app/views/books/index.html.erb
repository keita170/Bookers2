
<body>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
      <% if @book.errors.any? %>
       <div class="error">
       <%= @book.errors.count %>error prohibited this obj from being saved:
       <ul>
       <% @book.errors.full_messages.each do |message| %>
        <%= message %>
       <% end %>
       </ul>
       </div>
      <% end %>

      <%= render 'books/list', book: @book, user: @user %>

      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
           <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
            <th></th>
           </tr>
          </thead>
          <tbody>
           <% @books.each do |book| %>
           <tr>
             <th>
               <%= link_to user_path(book.user) do %>
               <%= attachment_image_tag book.user, :profile_image,  format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %>
               <% end %>
               </th>
             <th><%= link_to book.title, book_path(book.id) %></th>
             <th><%= book.body %></th>
             <th>
                 <% if book.favorited_by?(current_user) %>
                   <%= link_to book_favorite_path(id: book.id, book_id: book.id), method: :delete do %>
                    <i class="fas fa-heart"></i>
                   <% end %>
                 <%= book.favorites.count %>
                 <% else %>
                   <%= link_to book_favorites_path(id: book.id, book_id: book.id), method: :post do %>
                     <i class="far fa-heart"></i>
                   <% end %>
                 <%= book.favorites.count %>
                 <% end %>
             </th>
             <th><p>コメント数：<%= book.comments.count %></p></th>
           </tr>
           <% end %>
          </tbody>
        </table>
      </div>

    </div>
  </div>
</body>
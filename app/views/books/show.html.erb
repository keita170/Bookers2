<body>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %><br>
        <table class="table">
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </table>
        <%= link_to edit_user_path(@user), class:"btn btn-outline-secondary btn-block" do %>
        <span class="fas fa-user-cog"></span>
        <% end %>
        <h2>New Book</h2>
        <%= form_with model:@book, local:true do |f| %>
        <p>Title</p>
        <%= f.text_field :title %>
        <p>Opinion</p>
        <%= f.text_area :body %><br>
        <%= f.submit 'Create Book', class:"btn btn-success" %>
        <% end %>

      </div>

      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table table-hover table-inverse">
          <thead>
           <tr>
            <th><%= link_to user_path(@book.user) do %>
               <%= attachment_image_tag @book.user, :profile_image,  format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %>
               <% end %><br>
               <%= link_to @user.name, user_path(@book.user) %>
               </th>
            <th><%= link_to @book.title, book_path(@book.id) %></th>
            <th><%= @book.body %></th>
            <% if @book.user == current_user %>
            <th><%= link_to "Edit", edit_book_path(@book) ,class:"btn btn-sm btn-success" %></th>
            <th><%= link_to "Destroy", destroy_book_path(@book) , method: :delete , "data-confirm" => "本当に消しますか？" ,class:"btn btn-sm btn-danger" %></th>
            <% end %>
           </tr>
          </thead>
        </table>
      </div>

    </div>
  </div>
</body>
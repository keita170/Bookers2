


<body>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <%= render 'books/list', book: @book, user: @user %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table table-hover table-inverse">
          
           <tr>
            <th><%= link_to user_path(@booki.user) do %>
               <%= attachment_image_tag @booki.user, :profile_image,  format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %>
               <% end %><br>
               <%= link_to @user.name, user_path(@booki.user) %>
               </th>
            <th><%= link_to @booki.title, book_path(@booki.id) %></th>
            <th><%= @booki.body %></th>
            <% if @booki.user == current_user %>
            <th><%= link_to "Edit", edit_book_path(@booki) ,class:"btn btn-sm btn-success" %></th>
            <th><%= link_to "Destroy", destroy_book_path(@booki) , method: :delete , "data-confirm" => "本当に消しますか？" ,class:"btn btn-sm btn-danger" %></th>
            <% end %>



            <th>
              <% if @booki.favorited_by?(current_user) %>
               <%= link_to  book_favorite_path(@booki), method: :delete do %>
               <i class="fas fa-heart"></i>
               <% end %>
               <%= @booki.favorites.count %>
              <% else %>
               <%= link_to  book_favorites_path(@booki), method: :post do %>
               <i class="far fa-heart"></i>
               <% end %>
               <%= @booki.favorites.count %>
              <% end %>
            </th>
            <th>
                <p>コメント件数：<%= @booki.comments.count %></p>
            </th>


           </tr>
        </table>
        
        
         <table>
          <tbody id="comment_area">
            <% @booki.comments.each do |comment| %>
              <tr>
                <td><%= attachment_image_tag comment.user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", size: '40x40' %><br><%= comment.user.name %></td>
                <td></td>
                <td><%= comment.comment %></td>
                <td>
                    <% if comment.user == current_user %>
                    <%= link_to "Destroy", book_comment_path(comment.book, comment), class:"btn btn-sm btn-danger", method: :delete %>
                    <% end %>
                </td>
                
              </tr>
            <% end %>
          </tbody>
        </table>

        
        <div class="new-comment" >
            <%= form_with(model:[@booki, @comment], local:true) do |f| %>
            <%= f.text_area :comment %><br>
            <%= f.submit "送信" %>
            <% end %>
        </div>
      </div>

    </div>
  </div>
</body>